<%- include('./includes/head') %>
<%- include('./includes/nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">

                <h1 class="text-center">Criar conta ou Entrar</h1>
                <p class="text-center lead">Faça seu login ou crie sua conta abaixo</p>

                <%- include('includes/messages') %>

                <div class="row">
                    <div class="col-lg my-5">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você não tem conta, preencha o formulário abaixo:</p>
                        <form class="form-cadastro" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label for="InputEmail1" class="form-label">Seu e-mail</label>
                              <input name="email" type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <label for="InputPassword1" class="form-label">Sua senha</label>
                                <input name="password" type="password" class="form-control" id="InputPassword1">
                            </div>
                            <button type="submit" class="btn btn-primary">Criar minha conta</button>
                          </form>
                    </div>
                    <div class="col-lg my-5">
                        <h4>Faça seu login</h4>
                        <p>Se você já possui uma conta, faça login abaixo:</p>
                        <form class="form-login" action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label for="InputEmail2" class="form-label">Seu e-mail</label>
                              <input name="email" type="email" class="form-control" id="InputEmail2" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <label for="InputPassword2" class="form-label">Sua senha</label>
                                <input name="password" type="password" class="form-control" id="InputPassword2">
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('./includes/footer') %>

