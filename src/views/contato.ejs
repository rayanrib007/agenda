<%- include('./includes/head') %>
<%- include('./includes/nav') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">

          <h1 class="text-center">Contatos</h1>
          <p class="text-center lead">Crie ou edite seus contatos.</p>

          <%- include('./includes/messages') %>

          <% if(contato._id){ %>
          <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
          <% } else { %>
            <form class="form-contato" action="/contato/register" method="POST">
          <% } %>  
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="nome" class="form-label">Nome:</label>
              <input name="nome" type="text" class="form-control" id="nome" value="<%= contato.nome %>">
            </div>
            <div class="mb-3">
                <label for="sobrenome" class="form-label">Sobrenome:</label>
                <input name="sobrenome" type="text" class="form-control" id="sobrenome" value="<%= contato.sobrenome %>">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-mail:</label>
                <input name="email" type="email" class="form-control" id="email" value="<%= contato.email %>">
            </div>
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone:</label>
                <input name="telefone" type="tel" class="form-control" id="telefone" value="<%= contato.telefone %>">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>

      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('./includes/footer') %>

